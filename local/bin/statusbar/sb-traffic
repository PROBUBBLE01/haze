#!/bin/sh

set -- /sys/class/net/[ew]*/statistics/rx_bytes
bps=0

for path do
	read -r rx_bytes <"$path"
	bps=$((bps + rx_bytes))
done

sleep 1

for path do
	read -r rx_bytes <"$path"
	bps=$((bps - rx_bytes))
done

bps=${bps#-}

speed=$(awk -v bps=$bps 'BEGIN { kbps=bps/1024; mbps=kbps/1024; if (mbps >= 1.0) { printf "   %.1f M/s\n", mbps } else { printf "   %.0f K/s\n", kbps } }')

printf "$speed"
