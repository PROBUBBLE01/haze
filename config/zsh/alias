alias ls="ls --color=auto --group-directories-first"
alias l="ls --color=auto -lah --group-directories-first"
alias grep="grep --color=auto"

alias v="nvim"
alias sv="sudo nvim"
alias nt="ping -c 3 8.8.8.8"
alias myip="nmcli | grep inet4 | cut -b 8- | cut -d '/' -f 1 | head -1"
alias clip="xclip -selection clipboard -rmlastnl"
alias ii="macchina"
alias mnt="udisksctl mount -b"
alias umnt="udisksctl unmount -b"

alias poweroff="systemctl poweroff --no-wall"
alias reboot="systemctl reboot --no-wall"
alias suspend="systemctl suspend --no-wall"
